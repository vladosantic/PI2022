@model PI2022.Models.Jobs

@{
    ViewData["Title"] = "Uredi poslove";
}

<h1>Uredi poslove</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpisPosla" class="control-label">Opis posla</label>
                <input asp-for="OpisPosla" class="form-control" />
                <span asp-validation-for="OpisPosla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojOsoba" class="control-label">Broj osoba</label>
                <input asp-for="BrojOsoba" class="form-control" />
                <span asp-validation-for="BrojOsoba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojSati" class="control-label">Broj sati</label>
                <input asp-for="BrojSati" class="form-control" />
                <span asp-validation-for="BrojSati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CijenaSata" class="control-label">Cijena sata</label>
                <input asp-for="CijenaSata" class="form-control" />
                <span asp-validation-for="CijenaSata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotrebnaOprema" class="control-label">Potrebna oprema</label>
                <input asp-for="PotrebnaOprema" class="form-control" />
                <span asp-validation-for="PotrebnaOprema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PocetakRadova" class="control-label">Početak radova</label>
                <input asp-for="PocetakRadova" class="form-control" />
                <span asp-validation-for="PocetakRadova" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZavrsetakRadova" class="control-label">Završetak radova</label>
                <input asp-for="ZavrsetakRadova" class="form-control" />
                <span asp-validation-for="ZavrsetakRadova" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uredi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
