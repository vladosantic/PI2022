@model PI2022.Models.Schedule

@{
    ViewData["Title"] = "Detalji";
}

<h1>Detalji</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Zaposlenik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zaposlenik)
        </dd>
        <dt class = "col-sm-2">
            Opis posla
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpisPosla)
        </dd>
        <dt class = "col-sm-2">
            Početak rada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PocetakRada)
        </dd>
        <dt class = "col-sm-2">
            Završetak rada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZavrsetakRada)
        </dd>
        <dt class = "col-sm-2">
             Broj sati
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Math.Round(Model.ZavrsetakRada.Subtract(Model.PocetakRada).TotalHours, 1))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Uredi</a> |
    <a asp-action="Index">Natrag na popis</a>
</div>
