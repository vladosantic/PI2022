@model PI2022.Models.Schedule

@{
    ViewData["Title"] = "Obriši podatak";
}
@if(User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac")){
<h1 class="d-flex justify-content-center py-3 fw-bold">BRISANJE IZ RASPOREDA</h1>
<hr />
<h4 class="fst-italic ms-3">Jeste li sigurni da želite obrisati ovaj podatak iz rasporeda?</h4>

<div>
    <hr />
    <dl class="row ms-4">
        <dt class = "col-sm-2">
            Zaposlenik:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zaposlenik)
        </dd>
        <dt class = "col-sm-2">
            Posao:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posao)
        </dd>
        <dt class = "col-sm-2">
            Napomena:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Napomena)
        </dd>
        <dt class = "col-sm-2">
            Početak rada:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PocetakRada)
        </dd>
        <dt class = "col-sm-2">
            Završetak rada:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZavrsetakRada)
        </dd>
        <dt class = "col-sm-2">
             Broj sati:
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Math.Round(Model.ZavrsetakRada.Subtract(Model.PocetakRada).TotalHours, 1))
        </dd>
    </dl>
 </div>
 <hr />
 <div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group" role="group" aria-label="First group">
                <input type="submit" value="Obriši" class="btn btn-danger fw-bold"/>
            </div>
            <div class="input-group">
                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
            </div>
        </div>
    </form>
</div>
<hr />
}