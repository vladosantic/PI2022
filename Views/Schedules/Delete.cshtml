@model PI2022.Models.Schedule

@{
    ViewData["Title"] = "Obriši podatak";
}

<h1>Brisanje</h1>

<h3>Jeste li sigurni da želite obrisati ovaj podatak?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Zaposlenik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zaposlenik)
        </dd>
        <dt class = "col-sm-2">
            Opis posla
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpisPosla)
        </dd>
        <dt class = "col-sm-2">
            Početak rada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PocetakRada)
        </dd>
        <dt class = "col-sm-2">
            Završetak rada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZavrsetakRada)
        </dd>
        <dt class = "col-sm-2">
             Broj sati
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Math.Round(Model.ZavrsetakRada.Subtract(Model.PocetakRada).TotalHours, 1))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag na popis</a>
    </form>
</div>
