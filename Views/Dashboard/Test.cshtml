<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @{
        ViewData["Title"] = "Evidencija";
    }

    <h1>Troškovi i prihodi</h1>
    <br />
</head>
<div class="row">
    <div class="col-md-4">
        <form asp-action="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class='e-btn-group custom-rbt-group'>
                    <input type="radio" id="radioleft" name="" value="Expense" /> @* checked="@(Model.Type="Expense")" *@
                    <label class="e-btn" for="radioleft">Trošak</label>
                    <input type="radio" id="radioleft" name="" value="Expense" /> @* checked="@(Model.Type="Income")" *@
                    <label class="e-btn" for="radiomiddle">Prihod</label>
                </div>
            </div>
            <div class="mb-3">
                <ejs-textbox id="title" placeholder="Title" name="" floatLabelType="Always"></ejs-textbox>
                @*<span asp-validation-for="Title" class="text-danger"></span>*@
            </div>
            <div class="mb-3">
                @* ejs-for="Icon" umjesto name za dohvat podatka iz Controller-a *@
                <ejs-textbox id="icon" placeholder="Icon" name="" floatLabelType="Always"></ejs-textbox> 
                @*<span asp-validation-for="Title" class="text-danger"></span>*@
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Potvrdi" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>