@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav mx-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Pozdrav @User.Identity?.Name.Split("@").First()!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark fw-bold">Odjava</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light btn btn-primary me-md-1 px-2 fw-bold" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
    </li>
        <li class="nav-item">
            <a class="nav-link text-light btn btn-primary px-2 fw-bold" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
    </li>
}
</ul>
