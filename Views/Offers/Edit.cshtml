@model PI2022.Models.Offers

@{
    ViewData["Title"] = "Uredi ponudu";
}
@if (User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-9">
            <form asp-action="Edit">
                <div class="card mt-2 mb-3">
                    <div class="card-header">
                        <h1 class="d-flex justify-content-center py-3 fw-bold">UREDI PONUDE</h1>
                    </div>
                    <div class="card-body mx-4 py-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Naziv" class="control-label fw-bold">Naziv:</label>
                            <input asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="OpisPosla" class="control-label fw-bold">Opis posla:</label>
                            <input asp-for="OpisPosla" class="form-control" />
                            <span asp-validation-for="OpisPosla" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="BrojOsoba" class="control-label fw-bold">Broj osoba:</label>
                            <input asp-for="BrojOsoba" class="form-control" />
                            <span asp-validation-for="BrojOsoba" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="BrojSati" class="control-label fw-bold">Broj sati:</label>
                            <input asp-for="BrojSati" class="form-control" />
                            <span asp-validation-for="BrojSati" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="CijenaSata" class="control-label fw-bold">Cijena po satu:</label>
                            <input asp-for="CijenaSata" class="form-control" />
                            <span asp-validation-for="CijenaSata" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="PotrebnaOprema" class="control-label fw-bold">Potrebna oprema:</label>
                            <input asp-for="PotrebnaOprema" class="form-control" />
                            <span asp-validation-for="PotrebnaOprema" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="PocetakRadova" class="control-label fw-bold">Početak radova:</label>
                            <input asp-for="PocetakRadova" class="form-control" />
                            <span asp-validation-for="PocetakRadova" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ZavrsetakRadova" class="control-label fw-bold">Završetak radova:</label>
                            <input asp-for="ZavrsetakRadova" class="form-control" />
                            <span asp-validation-for="ZavrsetakRadova" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer mb-2">
                        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group" role="group" aria-label="First group">
                                <input type="submit" value="Spremi Promjene" class="btn btn-success fw-bold" />
                            </div>
                            <div class="input-group">
                                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
