@model PI2022.Models.Equipment

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi opremu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label">Količina</label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumKupnje" class="control-label">Datum kupnje</label>
                <input asp-for="DatumKupnje" class="form-control" />
                <span asp-validation-for="DatumKupnje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NabavnaCijena" class="control-label">Nabavna cijena</label>
                <input asp-for="NabavnaCijena" class="form-control" />
                <span asp-validation-for="NabavnaCijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proizvodac" class="control-label">Proizvođač</label>
                <input asp-for="Proizvodac" class="form-control" />
                <span asp-validation-for="Proizvodac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dobavljac" class="control-label">Dobavljač</label>
                <input asp-for="Dobavljac" class="form-control" />
                <span asp-validation-for="Dobavljac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Potrosnja" class="control-label">Potrošnja</label>
                <input asp-for="Potrosnja" class="form-control" />
                <span asp-validation-for="Potrosnja" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="PotrebanServis" />
                <label>Označite ako je potreban servis,<br />inače ostaviti prazno.</label>
            </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Uredi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
