@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Upravljanje ulogama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Upravljanje ulogama</h1>
<form method="post" asp-action="AddRole" asp-controller="Roles">
    <div class="input-group" style="display:block">
        <input name="roleName" class="form-control-2" placeholder="Unesite naziv uloge">
         <span class="input-group-btn">
            <button class="btn btn-primary">Dodaj novu ulogu</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Uloga</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>