@model IEnumerable<PI2022.Models.Employees>

@{
    ViewData["Title"] = "Zaposlenici";
}

<h1>Zaposlenici</h1>

<form asp-controller="Employees" asp-action="Index" method="get">
    <p>
        <input type="text" name="SearchString" placeholder="Ime zaposlenika"/>
        <input class="btn btn-primary" type="submit" value="Pretraži" />
    </p>
</form>

<button class="btn btn-primary">
    <a asp-action="Create" style="color:white">Dodaj novog zaposlenika</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Zaposlen od:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozicija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certifikati)
            </th>
            <th>
                Plaća
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.Raw(DateOnly.FromDateTime(item.ZaposlenOd))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozicija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certifikati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            @if(item.Status == true)
                {
                    <td>Slobodan</td>
                }
                else
                {
                    <td>Zauzet</td>    
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Ukloni</a>
            </td>
        </tr>
}
    </tbody>
</table>
