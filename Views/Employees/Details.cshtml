@model PI2022.Models.Employees

@{
    ViewData["Title"] = "Detalji zaposlenika";
}
@if(User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac"))
{
    <h1 class="d-flex justify-content-center py-3 fw-bold">DETALJI ZAPOSLENIKA</h1>

    <div>
        <hr />
        <dl class="row ms-4">
            <dt class = "col-sm-2">
                Ime:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Ime)
            </dd>
            <dt class = "col-sm-2">
                Prezime:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Prezime)
            </dd>
            <dt class="col-sm-2">
                Spol:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Spol)
            </dd>
            <dt class = "col-sm-2">
                Adresa:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Adresa)
            </dd>
            <dt class = "col-sm-2">
                Telefon:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefon)
            </dd>
            <dt class = "col-sm-2">
                Email:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Datum Zaposlenja:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ZaposlenOd)
            </dd>
            <dt class = "col-sm-2">
                Pozicija:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Pozicija)
            </dd>
            <dt class = "col-sm-2">
                Certifikati:
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Certifikati)
            </dd>
            <dt class="col-sm-2">
                Plaća:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Placa)
            </dd>
            <dt class = "col-sm-2">
                Status:
            </dt>
            @if (Model.Status == true)
            {
                <dd class = "col-sm-2">Slobodan</dd>
            }
            else
            {
                <dd class = "col-sm-2">Zauzet</dd>
            }
        </dl>
    </div>
    <hr />
    <div>
        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group" role="group" aria-label="First group">
                <a class="btn btn-warning fw-bold" style="color:white" asp-action="Edit" asp-route-id="@Model?.Id">Promijeni Podatke</a>
            </div>
            <div class="input-group">
                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
            </div>
        </div>
    </div>
    <hr />
}
