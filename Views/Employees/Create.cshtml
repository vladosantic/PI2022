@model PI2022.Models.Employees

@{
    ViewData["Title"] = "Dodaj novog zaposlenika";
}

<h1>Dodaj novog zaposlenika</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spol" class="control-label"></label>
                <select asp-for="Spol" class="form-control" name="Spol">
                    <option>Odaberite spol</option>
                    <option>M</option>
                    <option>Ž</option>
                    <span asp-validation-for="Spol" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZaposlenOd" class="control-label"></label>
                <input asp-for="ZaposlenOd" class="form-control" data-val="true"
                       name="ZaposlenOd" type="date" value="1/1/2000" />
                <span asp-validation-for="ZaposlenOd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pozicija" class="control-label"></label>
                <input asp-for="Pozicija" class="form-control" />
                <span asp-validation-for="Pozicija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certifikati" class="control-label"></label>
                <input asp-for="Certifikati" class="form-control" />
                <span asp-validation-for="Certifikati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Placa" class="form-label"></label>
                <input asp-for="Placa" class="form-control" type="number" step="0.01" name="Placa">
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" />
                <label>Označite ako je zaposlenik slobodan,<br />inače ostaviti prazno.</label>
            </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
