@model PI2022.Models.Employees

@{
    ViewData["Title"] = "Dodaj novog zaposlenika";
}
@if(User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac")){
    <div class="row d-flex justify-content-center">
        <div class="col-md-9">
            <form asp-action="Create">
                <div class="card mt-2 mb-3">
                    <div class="card-header">
                        <h1 class="d-flex justify-content-center py-3 fw-bold">DODAJ NOVOG ZAPOSLENIKA</h1>
                    </div>
                    <div class="card-body mx-4 py-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Ime" class="control-label fw-bold">Ime:</label>
                            <input asp-for="Ime" class="form-control" />
                            <span asp-validation-for="Ime" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Prezime" class="control-label fw-bold">Prezime:</label>
                            <input asp-for="Prezime" class="form-control" />
                            <span asp-validation-for="Prezime" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Spol" class="control-label fw-bold">Spol:</label>
                            <select asp-for="Spol" class="form-control" name="Spol">
                                <option>Odaberite spol</option>
                                <option>M</option>
                                <option>Ž</option>
                                <span asp-validation-for="Spol" class="text-danger"></span>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Adresa" class="control-label fw-bold">Adresa:</label>
                            <input asp-for="Adresa" class="form-control" />
                            <span asp-validation-for="Adresa" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Telefon" class="control-label fw-bold">Telefon:</label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Email" class="control-label fw-bold">Email:</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ZaposlenOd" class="control-label fw-bold">Datum Zaposlenja:</label>
                            <input asp-for="ZaposlenOd" class="form-control" type="date" />
                            <span asp-validation-for="ZaposlenOd" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Pozicija" class="control-label fw-bold">Pozicija:</label>
                            <input asp-for="Pozicija" class="form-control" />
                            <span asp-validation-for="Pozicija" class="text-danger"></span>
                        </div> 
                        <div class="form-group mb-2">
                            <label asp-for="Certifikati" class="control-label fw-bold">Certifikati:</label>
                            <input asp-for="Certifikati" class="form-control" />
                            <span asp-validation-for="Certifikati" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Placa" class="form-label fw-bold">Plaća:</label>
                            <input asp-for="Placa" class="form-control">
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-check-label mt-2">
                                <input class="form-check-input" asp-for="Status" />
                                <label>Označite ako je zaposlenik <i>SLOBODAN</i>, inače ostaviti <i>PRAZNO</i>.</label>
                            </label>
                        </div>
                    </div>
                    <div class="card-footer mb-2">
                        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group" role="group" aria-label="First group">
                                <input type="submit" value="Dodaj" class="btn btn-success fw-bold" />
                            </div>
                            <div class="input-group">
                                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
