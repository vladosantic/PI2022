@model PI2022.Models.References

@{
    ViewData["Title"] = "Uredi referentnu opremu";
}
@if (User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-9">
            <form asp-action="Edit">
                <div class="card mt-2 mb-3">
                    <div class="card-header">
                        <h1 class="d-flex justify-content-center py-3 fw-bold">UREDI REFERENTNU OPREMU</h1>
                    </div>
                    <div class="card-body mx-4 py-2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Naziv" class="control-label fw-bold">Naziv:</label>
                            <input asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Kategorija" class="control-label fw-bold">Kategorija:</label>
                            <input asp-for="Kategorija" class="form-control" />
                            <span asp-validation-for="Kategorija" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Opis" class="control-label fw-bold">Opis:</label>
                            <input asp-for="Opis" class="form-control" />
                            <span asp-validation-for="Opis" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Dobavljac" class="control-label fw-bold">Dobavljač:</label>
                            <input asp-for="Dobavljac" class="form-control" />
                            <span asp-validation-for="Dobavljac" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CijenaReferentneOpreme" class="control-label fw-bold">Cijena Referentne Opreme:</label>
                            <input asp-for="CijenaReferentneOpreme" class="form-control" />
                            <span asp-validation-for="CijenaReferentneOpreme" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer mb-2">
                        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group" role="group" aria-label="First group">
                                <input type="submit" value="Spremi Promjene" class="btn btn-success fw-bold" />
                            </div>
                            <div class="input-group">
                                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
