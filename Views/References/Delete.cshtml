@model PI2022.Models.References

@{
    ViewData["Title"] = "Obriši referentnu opremu";
}



<h3>Jeste li sigurni da želite obrisati ovu referentnu opremu?</h3>
<div>
   
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            Kategorija
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kategorija)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            Dobavljač
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dobavljac) 
        </dd>
        <dt class = "col-sm-2">
            Cijena referentne opreme
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CijenaReferentneOpreme) KM
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag na popis</a>
    </form>
</div>
