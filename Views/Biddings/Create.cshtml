@model PI2022.Models.Bidding

@{
    ViewData["Title"] = "Dodaj natječaj";
}

<h1>Dodaj natječaj</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label">Naziv natječaja</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label">Opis posla</label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcijenjenaVrijednost" class="control-label">Procijenjena vrijednost</label>
                <input asp-for="ProcijenjenaVrijednost" class="form-control" />
                <span asp-validation-for="ProcijenjenaVrijednost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trajanje" class="control-label">Trajanje natječaja</label>
                <input asp-for="Trajanje" class="form-control" />
                <span asp-validation-for="Trajanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objavljen" class="control-label"></label>
                <input asp-for="Objavljen" class="form-control" type="date" />
                <span asp-validation-for="Objavljen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dobitnik" class="control-label">Dobitnik natječaja</label>
                <input asp-for="Dobitnik" class="form-control" />
                <span asp-validation-for="Dobitnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
