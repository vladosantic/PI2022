@model PI2022.Models.Bidding

@{
    ViewData["Title"] = "Brisanje natječaja";
}
@if(User.IsInRole("administrator") || User.IsInRole("vlasnik") || User.IsInRole("poslodavac")){
<h1 class="d-flex justify-content-center py-3 fw-bold">BRISANJE NETJEČAJA</h1>
<hr />
<h4 class="fst-italic ms-3">Jeste li sigurni da želite obrisati ovaj natječaj?</h4>

<div>
    <hr />
    <dl class="row ms-4">
        <dt class = "col-sm-2">
            Naziv Natječaja:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            Opis Posla:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            Procijenjena Vrijednost:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcijenjenaVrijednost) KM
        </dd>
        <dt class = "col-sm-2">
            Trajanje Natječaja:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trajanje)
        </dd>
        <dt class = "col-sm-2">
            Objavljen:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Objavljen)
        </dd>
        <dt class = "col-sm-2">
            Dobitnik Natječaja:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dobitnik)
        </dd>
    </dl>
</div>
<hr />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="btn-toolbar justify-content-between my-2" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group" role="group" aria-label="First group">
                <input type="submit" value="Obriši" class="btn btn-danger fw-bold" />
            </div>
            <div class="input-group">
                <a class="btn btn-danger fw-bold" asp-action="Index">&#11178; Natrag na Popis</a>
            </div>
        </div>
    </form>
</div>
<hr />
}