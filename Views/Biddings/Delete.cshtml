@model PI2022.Models.Bidding

@{
    ViewData["Title"] = "Brisanje natječaja";
}



<h3>Jeste li sigurni da želite obrisati ovaj natječaj?</h3>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            Naziv natječaja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            Opis posla
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            Procijenjena vrijednost
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcijenjenaVrijednost) KM
        </dd>
        <dt class = "col-sm-2">
            Trajanje natječaja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trajanje)
        </dd>
        <dt class = "col-sm-2">
            Objavljen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Objavljen)
        </dd>
        <dt class = "col-sm-2">
            Dobitnik natječaja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dobitnik)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Natrag na popis</a>
    </form>
</div>
